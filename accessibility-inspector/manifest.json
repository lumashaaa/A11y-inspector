{
  "manifest_version": 3,
  "name": "Accessibility Inspector",
  "version": "1.0",
  "description": "This extension allows you to check the accessibility of websites",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Website Accessibility Check"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/color-utils.js",
        "utils/a11y-rules.js",
        "utils/report-generator.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}